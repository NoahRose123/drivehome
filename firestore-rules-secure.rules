rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 🔐 SECURE: Only authenticated users can access data
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // 🔐 SECURE: User-specific data - only the user can access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 🔐 SECURE: Farm data - only authenticated users
    match /startnewcrop/{document} {
      allow read, write: if request.auth != null;
    }

    match /visitor_logs/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /shippingLogs/{document} {
      allow read, write: if request.auth != null;
    }

    // 🔐 SECURE: Farm monitoring data - authenticated users only
    match /vas-b1-f1-MC/{document} {
      allow read, write: if request.auth != null;
    }

    match /vas-b1-f2-MC/{document} {
      allow read, write: if request.auth != null;
    }

    match /vas-b1-f1-M/{document} {
      allow read, write: if request.auth != null;
    }

    match /vas-b1-f2-M/{document} {
      allow read, write: if request.auth != null;
    }

    match /vas-b1-f1-ER/{document} {
      allow read, write: if request.auth != null;
    }

    match /vas-b1-f2-ER/{document} {
      allow read, write: if request.auth != null;
    }

    // 🔐 SECURE: Environmental data - authenticated users only
    match /ammonia_levels/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /ammonia_levels_f2/{document} {
      allow read, write: if request.auth != null;
    }

    match /fixed_days/{document} {
      allow read, write: if request.auth != null;
    }

    match /vas-b1-fl/{document} {
      allow read, write: if request.auth != null;
    }

    match /humidity-density/{document} {
      allow read, write: if request.auth != null;
    }

    // 🔐 SECURE: Feed schedules - authenticated users only
    match /feed_schedules/{document} {
      allow read, write: if request.auth != null;
    }

    // 🔐 SECURE: System alerts - authenticated users only
    match /system_alerts/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
